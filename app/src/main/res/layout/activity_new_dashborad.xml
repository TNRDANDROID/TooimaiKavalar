<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="activity"
            type="com.nic.thooimaikaavalar.activity.NewDashborad" />
    </data>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_icon_new_1"
        tools:context=".activity.NewDashborad">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/toolbar"
            android:background="@color/colorPrimaryDark">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_img"
            android:src="@mipmap/back_arrow"
            android:tint="@color/white"
            android:padding="@dimen/_10sdp"
            android:layout_centerVertical="true"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:text="Dashboard"
            android:layout_centerInParent="true"
            android:textStyle="bold"></TextView>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:background="#66B8B4B4">

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <androidx.cardview.widget.CardView
                android:layout_margin="@dimen/_20sdp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:layout_centerHorizontal="true"
                android:id="@+id/card_view_4"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_12sdp"
                android:outlineSpotShadowColor="@color/purple">

                <RelativeLayout
                    android:padding="@dimen/_10sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/village_name"></TextView>
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_below="@id/village_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mcc_name"></TextView>
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:layout_below="@id/mcc_name"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date_of_commencement"></TextView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:id="@+id/card_view"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_12sdp"
                android:outlineSpotShadowColor="@color/purple">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:id="@+id/add_thooimai_kavalar_btn"
                >

            <Button
                android:textSize="@dimen/_12sdp"
                android:layout_toLeftOf="@+id/icon_1"
                android:background="@color/full_transparent"
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:text="Add Thooimai Kaavalar Details"
                android:textAllCaps="false"
                >
            </Button>

                <ImageView
                    android:padding="@dimen/_3sdp"
                    android:id="@+id/icon_1"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/add_user"></ImageView>

            </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:id="@+id/card_view_1"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_12sdp"
                android:outlineSpotShadowColor="@color/purple">
            <RelativeLayout
                android:id="@+id/edit_thooimai_kavalar_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                >
            <Button
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:background="@color/full_transparent"
                android:layout_height="match_parent"
                android:text="View/Edit Thooimai Kaavalar Details"
                android:textAllCaps="false"
                ></Button>
                <ImageView
                    android:padding="@dimen/_3sdp"
                    android:id="@+id/icon_3"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/view_and_edit_icon"></ImageView>

            </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:id="@+id/card_view_2"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_12sdp"
                android:outlineSpotShadowColor="@color/purple">
            <RelativeLayout
                android:id="@+id/adddetails_of_component_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                >
            <Button
                android:textSize="@dimen/_12sdp"
                android:layout_toLeftOf="@+id/icon_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:text="View/Take Component Photos "
                android:textAllCaps="false"
                android:id="@+id/btn_3"
                android:background="@color/full_transparent"></Button>
                <ImageView
                    android:padding="@dimen/_3sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:id="@+id/icon_2"
                    android:src="@drawable/view_and_take_icon"></ImageView>

            </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        </RelativeLayout>


</RelativeLayout>
</layout>