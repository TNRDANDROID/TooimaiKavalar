<layout>

<data>
    <variable
        name="activity"
        type="com.nic.thooimaikaavalar.activity.FullImageActivity" />
</data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark">

            <TextView
                style="@string/font_circular_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin"
                android:text="View Image"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/back_img"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_12sdp"
                android:tint="@color/white"
                android:onClick="@{()-> activity.onBackPress()}"
                android:src="@mipmap/back_arrow" />

            <ImageView
                android:tint="@color/white"
                android:id="@+id/home_img"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/_12sdp"
                android:onClick="@{()-> activity.homePage()}"
                android:src="@mipmap/home_img" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/image_preview_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_layout"
            android:fadeScrollbars="false"
            android:scrollbarSize="4dp"
            android:scrollbars="vertical" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_below="@id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitEnd"
            android:id="@+id/no_data_gif"
            android:layout_centerInParent="true"
            android:src="@drawable/no_result_show"></pl.droidsonroids.gif.GifImageView>


    </RelativeLayout>

</layout>