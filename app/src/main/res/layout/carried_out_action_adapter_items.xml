<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <data>
            <variable
                name="adapter"
                type="com.nic.thooimaikaavalar.adapter.CarriedOutWastDumpAdapter" />
        </data>
        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            android:id="@+id/card_view"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_12sdp"
            android:outlineSpotShadowColor="@color/purple"
            tools:ignore="UnusedAttribute">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:padding="@dimen/_7sdp"
                android:id="@+id/relative2"
                android:gravity="center_vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl1">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:id="@+id/imageview">

                        <de.hdodenhof.circleimageview.CircleImageView

                            android:id="@+id/activityIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"
                            android:padding="1dp"
                            android:src="@drawable/ic_gallery_icon"
                            app:civ_border_color="@color/colorPrimary"
                            app:civ_border_width="0dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/imageview"
                        android:paddingStart="10dp"
                        android:layout_toStartOf="@+id/status"
                        android:paddingEnd="15dp"
                        android:id="@+id/content">
                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey2"
                            android:gravity="start"
                            android:textSize="13sp"
                            android:id="@+id/asset_name"
                            android:text="Is there any waste dump ?"
                            android:fontFamily="@string/tamil_font" />

                        <TextView
                            android:visibility="gone"
                            android:layout_below="@+id/asset_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey2"
                            android:gravity="start"
                            android:textSize="13sp"
                            android:id="@+id/ans1"
                            android:text="@string/yes"
                            android:fontFamily="@string/tamil_font" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:gravity="start"
                            android:textSize="13sp"
                            android:id="@+id/ques"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_below="@+id/ans1"
                            android:text="Is this waste dump cleaned or not ?"
                            android:fontFamily="@string/tamil_font" />
                        <RelativeLayout
                            android:id="@+id/yesno_layout"
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/ques"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioGroup
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/radio_group"
                                android:orientation="horizontal">
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/functional_yes"
                                    android:text="@string/yes"
                                    android:fontFamily="@string/tamil_font"/>
                                <RadioButton
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/functional_no"
                                    android:text="@string/no"
                                    android:fontFamily="@string/tamil_font"/>
                            </RadioGroup>

                        </RelativeLayout>


                    </RelativeLayout>
                    <TextView
                        android:layout_marginTop="@dimen/_11sdp"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:textColor="@color/white"
                        android:background="@drawable/circlegreen"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_below="@+id/delete_ic"
                        android:textSize="@dimen/_11sdp"
                        android:id="@+id/status"
                        android:fontFamily="@string/tamil_font" />
                    <ImageView
                        android:visibility="gone"
                        android:padding="@dimen/_3sdp"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:id="@+id/delete_ic"
                        app:srcCompat="@drawable/ic_delete"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_below="@+id/rl1"
                    android:id="@+id/preview_image_layout"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:gravity="center_horizontal"
                    android:layout_height="@dimen/_100sdp">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        android:id="@+id/previous_image_layout"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_12sdp"
                        android:outlineSpotShadowColor="@color/purple"
                        tools:ignore="UnusedAttribute">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/grey2"
                                android:gravity="center_horizontal"
                                android:textSize="13sp"
                                android:id="@+id/before"
                                android:text="Before"
                                android:fontFamily="@string/tamil_font" />

                            <ImageView
                                android:layout_width="@dimen/_150sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_centerHorizontal="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_gallery_icon"
                                android:layout_below="@+id/before"
                                android:id="@+id/before_image_view"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        android:id="@+id/after_image_layout"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_12sdp"
                        android:outlineSpotShadowColor="@color/purple"
                        tools:ignore="UnusedAttribute">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/grey2"
                                android:gravity="center_horizontal"
                                android:textSize="13sp"
                                android:id="@+id/after"
                                android:text="After"
                                android:fontFamily="@string/tamil_font" />

                            <ImageView
                                android:layout_width="@dimen/_150sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_centerHorizontal="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/capture_image"
                                android:layout_below="@+id/after"
                                android:id="@+id/after_image_view"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerInParent="true"
                                android:textColor="@color/full_transparent"
                                android:id="@+id/after_image_lat"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/full_transparent"
                                android:layout_below="@+id/after_image_lat"
                                android:id="@+id/after_image_long"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </layout>
