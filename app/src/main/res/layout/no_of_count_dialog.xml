<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/log_in_bg_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/close_icon"
            android:id="@+id/tv_1"
            android:text="How Many Thooimai Kaavalars Add?"
            >
        </TextView>
        <ImageView
            android:id="@+id/close_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@mipmap/close_icon"></ImageView>
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:layout_below="@id/tv_1"
            android:weightSum="3"
            android:layout_centerHorizontal="true"
            android:background="@drawable/log_in_bg_background">

            <TextView
                android:textSize="@dimen/_12sdp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:id="@+id/minus"
                android:text="-"
                />
            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/grey"></View>
            <TextView
                android:textSize="@dimen/_12sdp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:id="@+id/number"
                android:text="1"
                />
            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/grey"></View>

            <TextView
                android:textSize="@dimen/_12sdp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:id="@+id/add"
                android:text="+"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="CANCEL"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/menu_title_size"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="OK"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/menu_title_size" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>