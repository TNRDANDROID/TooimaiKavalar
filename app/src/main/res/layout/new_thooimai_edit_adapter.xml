<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="adapter"
            type="com.nic.thooimaikaavalar.adapter.NewThooimaiEditAdapter" />
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_margin="@dimen/_10sdp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:outlineSpotShadowColor="@color/colorPrimaryDark"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_12sdp">

        <RelativeLayout
            android:padding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/image_rl"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerVertical="true"
                android:background="@drawable/top_bootom_curve_rect">

                <ImageView
                    android:src="@drawable/thooimai_kaavar_icon"
                    android:scaleType="center"
                    android:layout_width="match_parent"
                    android:tint="@color/grey"
                    android:layout_height="match_parent"
                    android:id="@+id/mcc_center_image"></ImageView>
            </RelativeLayout>


            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image_rl"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/delete_upload_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/thooimai_kavalar_name"></TextView>

                <TextView
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    ></TextView>

                <TextView
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/thooimai_kavalar_mobile_number"></TextView>

                <TextView
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mobile_number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    ></TextView>

                <TextView
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/date_of_engage"></TextView>


                <TextView
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_of_engage"
                    android:inputType="number"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    ></TextView>


                <TextView
                    android:textSize="@dimen/_12sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/date_of_training"></TextView>

                <TextView
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_of_training"
                    android:inputType="number"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    ></TextView>



            </LinearLayout>
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_100sdp"
                android:id="@+id/delete_upload_rl">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:tint="@color/red"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/delete_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"></ImageView>
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_mode_edit_black_24dp"
                    android:id="@+id/edit_icon"
                    android:tint="@color/darkgreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_5sdp"></ImageView>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>
