<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="adapter"
            type="com.nic.thooimaikaavalar.adapter.SwmMasterDetailsAdapter" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:id="@+id/card_view"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_12sdp"
        android:outlineSpotShadowColor="@color/purple"
        tools:ignore="UnusedAttribute">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <RelativeLayout
                android:layout_centerVertical="true"
                android:id="@+id/image_rl"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp">

                <ImageView
                    android:src="@drawable/swm_logo"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/logo_image"
                    android:contentDescription="@string/logo_icon" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll1"
                android:padding="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/image_rl"
                android:layout_toStartOf="@+id/delete_upload_rl"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pv_name"
                    android:fontFamily="@string/tamil_font"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/workers_allocated"
                    android:fontFamily="@string/tamil_font"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/workers_working"
                    android:fontFamily="@string/tamil_font"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wcc_pit"
                    android:fontFamily="@string/tamil_font"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/wvc_pit"
                    android:fontFamily="@string/tamil_font"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nursery_pit"
                    android:fontFamily="@string/tamil_font"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textColor="@color/black"
                    />


            </LinearLayout>
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_100sdp"
                android:id="@+id/delete_upload_rl">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:tint="@color/red"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/delete_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/delete_icon" />
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_baseline_visibility_24px"
                    android:id="@+id/upload_icon"
                    android:tint="@color/darkgreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:contentDescription="@string/upload_icon" />

            </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/rl1"
                android:id="@+id/server_side_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_cureved_bg_new">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/linear_layout">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/asset_layout">
                        <TextView
                            android:padding="@dimen/_11sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textSize="@dimen/_12sdp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:text="@string/add_view_assets_details"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/white"
                        android:layout_below="@+id/asset_layout"
                        android:id="@+id/view_1"/>
                    <RelativeLayout
                        android:layout_below="@+id/view_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/waste_dump_layout">
                        <TextView
                            android:padding="@dimen/_11sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textSize="@dimen/_12sdp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:text="@string/add_view_waste_dump_details"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/white"
                        android:layout_below="@+id/waste_dump_layout"
                        android:id="@+id/view_2"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_below="@+id/linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/carried_out_layout">
                    <TextView
                        android:padding="@dimen/_11sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_12sdp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="Activity Carried Out"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>
