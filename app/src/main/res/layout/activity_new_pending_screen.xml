<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="activity"
            type="com.nic.thooimaikaavalar.activity.NewPendingScreenActivity"/>
    </data>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NewPendingScreenActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_img"
            android:src="@mipmap/back_arrow"
            android:tint="@color/white"
            android:padding="@dimen/_10sdp"
            android:layout_centerVertical="true"></ImageView>
        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_icon"
            android:src="@drawable/ic_menu_black_24dp"
            android:tint="@color/white"
            android:padding="@dimen/_10sdp"
            android:layout_centerVertical="true"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:text="Pending Screen"
            android:layout_centerInParent="true"
            android:textStyle="bold"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/recyler_layout"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/gradStart"
            android:id="@+id/list_name"></TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@id/list_name"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/basic_recycler"></androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>
<!--
    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_centerInParent="true"
        android:id="@+id/no_data_icon"
        android:src="@drawable/no_data_ic"></ImageView>
-->

    <pl.droidsonroids.gif.GifImageView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitEnd"
        android:id="@+id/no_data_icon"
        android:layout_centerInParent="true"
        android:src="@drawable/no_result_show"></pl.droidsonroids.gif.GifImageView>



</RelativeLayout>
</layout>