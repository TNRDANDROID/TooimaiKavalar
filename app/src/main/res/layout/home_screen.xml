<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.nic.thooimaikaavalar.activity.HomePage" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.nic.thooimaikaavalar.activity.HomePage">
        <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin"
                android:text="@string/home_title"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                style="@style/font_circular_bold"/>

            <ImageView
                android:id="@+id/log_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:onClick="@{()-> activity.logout()}"
                android:scaleType="centerInside"
                android:src="@mipmap/log_out" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rellay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grad"
            android:layout_below="@+id/header_layout"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:id="@+id/imgUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/circle_border">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_margin="9dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle"
                    android:padding="8dp"
                    android:src="@mipmap/avatar"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgUser"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15sp"
                android:fontFamily="sans-serif-light"
                android:text="Joey Tribbiani"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />


            <TextView
                android:id="@+id/designation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:text="new york, usa"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linlay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rellay1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/followersBg"
                android:gravity="center"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/pending_works_for_upload"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/followingBg"
                android:gravity="center"
                android:padding="@dimen/_10sdp">



                    <TextView
                        android:id="@+id/pendingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="873"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="13sp" />



            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linlay1"
            android:layout_above="@+id/textView1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/view_housing_works"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:clickable="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="@dimen/_10sdp"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        app:cardBackgroundColor="@color/white"
                        android:id="@+id/add_mcc_card"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_12sdp"
                        android:outlineSpotShadowColor="@color/purple">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/v_1"
                                android:layout_width="@dimen/_4sdp"
                                android:layout_height="match_parent"
                                android:background="@drawable/line_shape_curved_bg"></View>

                            <Button
                                android:onClick="@{()-> activity.viewVillageList()}"
                                android:clickable="true"
                                android:padding="@dimen/_4sdp"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:id="@+id/add_new_mcc"
                                android:layout_width="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_height="match_parent"
                                android:text="@string/add_new_mcc"
                                android:background="@color/full_transparent"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sdp"
                            />
                            <ImageView
                                android:padding="@dimen/_3sdp"
                                android:id="@+id/icon_1"
                                android:layout_centerVertical="true"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:src="@drawable/add_user"></ImageView>


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/add_mcc_card"
                        android:layout_margin="@dimen/_10sdp"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        app:cardBackgroundColor="@color/white"
                        android:id="@+id/edit_mcc_card"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_12sdp"
                        android:outlineSpotShadowColor="@color/purple">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:id="@+id/v_2"
                                android:layout_width="@dimen/_4sdp"
                                android:layout_height="match_parent"
                                android:background="@drawable/line_shape_curved_bg"></View>

                            <Button
                                android:onClick="@{()-> activity.viewMCCBasicDetailsList()}"
                                android:clickable="true"
                                android:layout_toRightOf="@+id/v_2"
                                android:background="@color/full_transparent"
                                android:id="@+id/edit_mcc"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:text="@string/edit_mcc"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sdp"
                            />

                            <ImageView
                                android:padding="@dimen/_3sdp"
                                android:id="@+id/icon_3"
                                android:layout_centerVertical="true"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:src="@drawable/view_and_edit_icon"></ImageView>


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif-light"
                        android:text="View Works"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:visibility="gone"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:visibility="gone"
                        android:background="@color/grey" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/sync"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:visibility="visible"
                    android:onClick="@{()-> activity.openPendingScreen()}"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sync"
                        style="@style/font_circular_bold"
                        android:textColor="#000080"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="@string/pending_uploads"
                        android:textColor="#000000"
                        android:textSize="@dimen/_14sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:background="@color/grey" />

                </LinearLayout>


            </LinearLayout>

            </ScrollView>

        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/_13sdp"
            android:text="@string/software_d_a_d_b_nic"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="sans-serif-light"
            />

    </RelativeLayout>
</layout>