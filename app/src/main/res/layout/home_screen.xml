                        <TextView
                            android:textStyle="bold"
                            android:padding="@dimen/_3sdp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/_15sdp"
                            android:layout_toRightOf="@+id/profile_icon"
                            android:id="@+id/time_image_text"></TextView>

                    </RelativeLayout>
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:id="@+id/tv_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgUser1"
                        android:layout_marginTop="5sp"
                        android:fontFamily="sans-serif-light"
                        android:text="Joey Tribbiani"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_14sdp" />
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:id="@+id/designation1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_name1"
                        android:fontFamily="sans-serif"
                        android:text="new york, usa"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_10sdp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@+id/designation1"
                            android:id="@+id/timer"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:padding="@dimen/_10sdp"></TextView>

                    </RelativeLayout>

                </RelativeLayout>
                <View
                    android:id="@+id/vv"
                    android:layout_below="@+id/rellay2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_4">

                </View>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/sync_count_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vv"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/followersBg"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="sans-serif-light"
                            android:text="@string/pending_works_for_upload"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/followingBg"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp">



                        <TextView
                            android:id="@+id/pendingCount1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="873"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text=""
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="13sp" />



                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/sync_count_layout1"
