                                android:layout_height="@dimen/_45sdp"
                                app:cardBackgroundColor="@color/white"
                                android:id="@+id/edit_mcc_card"
                                app:cardCornerRadius="@dimen/_10sdp"
                                app:cardElevation="@dimen/_12sdp"
                                android:outlineSpotShadowColor="@color/purple">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <View
                                        android:id="@+id/v_2"
                                        android:layout_width="@dimen/_4sdp"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/line_shape_curved_bg"></View>

                                    <Button
                                        android:onClick="@{()-> activity.viewMCCBasicDetailsList()}"
                                        android:clickable="true"
                                        android:layout_toRightOf="@+id/v_2"
                                        android:background="@color/full_transparent"
                                        android:id="@+id/edit_mcc"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_centerHorizontal="true"
                                        android:text="@string/edit_mcc"
                                        android:textAlignment="center"
                                        android:textAllCaps="false"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_14sdp"
                                        />

                                    <ImageView
                                        android:padding="@dimen/_3sdp"
                                        android:id="@+id/icon_3"
                                        android:layout_centerVertical="true"
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginRight="@dimen/_10sdp"
                                        android:src="@drawable/view_and_edit_icon"></ImageView>


                                </RelativeLayout>

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:fontFamily="sans-serif-light"
                                android:text="View Works"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:visibility="gone"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="15dp"
                                android:visibility="gone"
                                android:background="@color/grey" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_marginBottom="@dimen/_10sdp"

                            android:id="@+id/sync"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:visibility="visible"
                            android:onClick="@{()-> activity.openPendingScreen()}"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sync"
                                style="@style/font_circular_bold"
                                android:textColor="#000080"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                android:text="@string/pending_uploads"
                                android:textColor="#000000"
                                android:textSize="@dimen/_14sdp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/_13sdp"
                                android:background="@color/grey" />

                        </LinearLayout>


                    </LinearLayout>

                </ScrollView>

            </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_13sdp"
                android:text="@string/software_d_a_d_b_nic"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="sans-serif-light"
                />

        </RelativeLayout>

        <!-- The main content view displays when the drawer is hidden -->

        <!-- The navigation drawer -->
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#ffffff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <RelativeLayout
                    android:id="@+id/rellay2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"
                    android:background="@drawable/menu_bg_bg_new_"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#34C51162">

                    <RelativeLayout
                        android:id="@+id/imgUser1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_margin="9dp"
                            android:id="@+id/profile_icon"
                            android:padding="8dp"
                            android:src="@drawable/ic_fertilizer"
                            />
                        <ImageView
                            android:visibility="gone"
                            android:padding="@dimen/_3sdp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_toRightOf="@+id/profile_icon"
