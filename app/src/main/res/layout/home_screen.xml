                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">



                                    <androidx.cardview.widget.CardView
                                        android:clickable="true"
                                        android:layout_centerHorizontal="true"
                                        xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_45sdp"
                                        app:cardBackgroundColor="@color/white"
                                        android:id="@+id/add_mcc_card1"
                                        app:cardElevation="@dimen/_12sdp"
                                        android:outlineSpotShadowColor="@color/purple">

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <View
                                                android:visibility="gone"
                                                android:id="@+id/v_11"
                                                android:layout_width="@dimen/_4sdp"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/line_shape_curved_bg"></View>

                                            <Button
                                                android:layout_toRightOf="@+id/icon_11"
                                                android:layout_marginLeft="@dimen/_5sdp"
                                                android:onClick="@{()-> activity.viewVillageList()}"
                                                android:clickable="true"
                                                android:padding="@dimen/_4sdp"
                                                android:id="@+id/add_new_mcc1"
                                                android:layout_width="match_parent"
                                                android:layout_centerHorizontal="true"
                                                android:layout_height="match_parent"
                                                android:text="@string/add_new_mcc"
                                                android:background="@color/full_transparent"
                                                android:textAlignment="textStart"
                                                android:textAllCaps="false"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/_12sdp"
                                                />
                                            <ImageView
                                                android:padding="@dimen/_3sdp"
                                                android:id="@+id/icon_11"
                                                android:layout_centerVertical="true"
                                                android:layout_width="@dimen/_25sdp"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentStart="true"
                                                android:layout_marginLeft="@dimen/_10sdp"
