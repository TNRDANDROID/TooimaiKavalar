<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="adapter"
            type="com.nic.thooimaikaavalar.adapter.BasicDetailsAdapter" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_10sdp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:id="@+id/card_view"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_12sdp"
        android:outlineSpotShadowColor="@color/purple">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



               <ImageView
                   android:layout_centerVertical="true"
                   android:src="@mipmap/avatar"
                   android:scaleType="fitXY"
                   android:layout_width="@dimen/_80sdp"
                   android:layout_height="@dimen/_80sdp"
                   android:id="@+id/mcc_center_image"></ImageView>


            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mcc_center_image"
                android:layout_toLeftOf="@+id/delete_upload_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mcc_name"
                    android:textColor="@color/black"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/village_name"
                    android:layout_below="@id/mcc_name"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/date"
                    android:layout_below="@id/village_name"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"></TextView>


            </RelativeLayout>
            <RelativeLayout
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_100sdp"
                android:id="@+id/delete_upload_rl">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:tint="@color/red"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/delete_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"></ImageView>
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/upload_icon"
                    android:id="@+id/upload_icon"
                    android:tint="@color/darkgreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_5sdp"></ImageView>

            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>
